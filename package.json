{
  "name": "pix-mcp",
  "version": "1.0.0",
  "description": "Production-grade MCP server for Pix payments in Brazil",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "pix-mcp": "./dist/index.js"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE",
    "mcp_config.example.json",
    ".env.example"
  ],
  "scripts": {
    "build": "tsc",
    "start": "MCP_MODE=http node dist/index.js",
    "start:local": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "dev:http": "MCP_MODE=http tsx src/index.ts",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "validate": "node scripts/setup-validator.js",
    "setup": "npm install && npm run build && npm run validate",
    "wizard": "node scripts/setup-wizard.js",
    "prepublishOnly": "npm run test && npm run build",
    "postinstall": "echo '\nðŸŽ‰ Pix MCP installed! Run \"npm run wizard\" for guided setup or \"npm run validate\" to check your configuration.'"
  },
  "keywords": [
    "mcp",
    "pix",
    "payments",
    "brazil",
    "ai",
    "claude",
    "model-context-protocol",
    "efi",
    "gerencianet"
  ],
  "author": "Pix MCP Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Regenerating-World/pix-mcp.git"
  },
  "homepage": "https://github.com/Regenerating-World/pix-mcp#readme",
  "bugs": {
    "url": "https://github.com/Regenerating-World/pix-mcp/issues"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "axios": "^1.6.0",
    "dotenv": "^16.3.0",
    "qrcode": "^1.5.3",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^20.0.0",
    "@types/qrcode": "^1.5.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.4.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
